---
// src/pages/docs/index.astro
const spaces = [
  { name: 'JHU', desc: 'Coursework & notes', href: '/docs/jhu/' },
  { name: 'SWE', desc: 'Software engineering docs', href: '/docs/swe/' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Docs Spaces</title>
    <style>
      :root { color-scheme: light dark; }
      body { margin: 0; font-family: system-ui, Segoe UI, Roboto, sans-serif; line-height: 1.45; }
      .wrap { max-width: 960px; margin: 0 auto; padding: 4rem 1rem; }
      h1 { font-size: 2rem; margin: 0 0 .5rem; }
      p.lead { margin: 0 0 2rem; opacity: .8; }
      .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1rem; }
      .card { border: 1px solid hsl(0 0% 50% / .2); border-radius: 14px; padding: 1.25rem 1.5rem; background: hsl(0 0% 100% / .03); }
      .card h2 { margin: 0 0 .25rem; font-size: 1.1rem; }
      .card p { margin: 0 0 1rem; opacity: .85; }
      .card a { display: inline-block; text-decoration: none; border: 1px solid currentColor; padding: .5rem .75rem; border-radius: 10px; }
    </style>
  </head>
  <body>
    <main class="wrap">
      <h1>Docs Spaces</h1>
      <p class="lead">Choose a space to enter.</p>
      <section class="grid">
        {spaces.map(s => (
          <article class="card">
            <h2>{s.name}</h2>
            <p>{s.desc}</p>
            <a href={s.href} aria-label={`Enter ${s.name}`}>Enter â†’</a>
          </article>
        ))}
      </section>
    </main>
  </body>
</html>
