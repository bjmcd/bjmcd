    "preview": "astro preview",
    "preview:jhu": "astro preview --root apps/jhu",
    "preview:swe": "astro preview --root apps/swe"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.6",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.35.2",
    "@tailwindcss/vite": "^4.1.12",
    "astro": "^5.13.2",
    "katex": "^0.16.22",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  }
}
