{
  "name": "former-field",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",

    "dev:jhu": "astro dev --root apps/jhu",
    "build:jhu": "astro build --root apps/jhu",

    "dev:swe": "astro dev --root apps/swe",
    "build:swe": "astro build --root apps/swe",

    "build:root": "astro build",

    "assemble": "node scripts/assemble-docs.mjs",
